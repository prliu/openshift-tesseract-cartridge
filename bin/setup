#!/bin/bash -e

downloadFiles() {
    cd $OPENSHIFT_DATA_DIR
    if [ ! -e libtool-2.4.6.tar.gz ]; then
	wget -c "http://ftpmirror.gnu.org/libtool/libtool-2.4.6.tar.gz" -O libtool-2.4.6.tar.gz;
    fi

    if [ ! -e leptonica-1.69.tar.gz ]; then
	wget -c "http://www.leptonica.org/source/leptonica-1.69.tar.gz" -O leptonica-1.69.tar.gz;
    fi

    if [ ! -e tesseract-ocr-3.02.02.tar.gz ]; then
	wget -c "https://tesseract-ocr.googlecode.com/files/tesseract-ocr-3.02.02.tar.gz" -O tesseract-ocr-3.02.02.tar.gz
    fi
}

extractFiles() {
    cd $OPENSHIFT_DATA_DIR
    if [ ! -e libtool-2.4.6 ]; then
	tar zxvf libtool-2.4.6.tar.gz
    fi

    if [ ! -e leptonica-1.69 ]; then
	tar zxvf leptonica-1.69.tar.gz
    fi

    if [ ! -e tesseract-ocr ]; then
	tar zxvf tesseract-ocr-3.02.02.tar.gz
    fi
}

buildLibTool() {
	cd $OPENSHIFT_DATA_DIR/libtool-2.4.6/
	./configure --prefix=$OPENSHIFT_HOMEDIR/tesseract3/usr
	make
	make install
	cd $OPENSHIFT_DATA_DIR
}

buildLeptonica() {
	cd $OPENSHIFT_DATA_DIR/leptonica-1.69/
	./configure --prefix=$OPENSHIFT_HOMEDIR/tesseract3/usr
	make
	make install
	cd $OPENSHIFT_DATA_DIR
}

buildTesseract() {

	cd $OPENSHIFT_DATA_DIR
	if [ ! -e autogen.sh.patch ]; then
        	cp $OPENSHIFT_HOMEDIR/tesseract3/patch/autogen.sh.patch .
		patch -p0 < autogen.sh.patch
	fi

	cd $OPENSHIFT_DATA_DIR/tesseract-ocr/
	./autogen.sh
	./configure --prefix=$OPENSHIFT_HOMEDIR/tesseract3/usr LIBLEPT_HEADERSDIR="$OPENSHIFT_HOMEDIR/tesseract3/usr/include/leptonica" LDFLAGS="-L$OPENSHIFT_HOMEDIR/tesseract3/usr/lib"
	make
	make install
	cd $OPENSHIFT_DATA_DIR
}

removeTemp() {
	cd $OPENSHIFT_DATA_DIR
	rm -rf libtool*
	rm -rf leptonica*
	rm -rf tesseract*
	rm -f autogen.sh.patch
}


case "$1" in
    -v|--version)
	version="$2"
	;;
    -m)
	$2
	exit 0
esac

source $OPENSHIFT_CARTRIDGE_SDK_BASH

downloadFiles
extractFiles
buildLibTool
buildLeptonica

echo $OPENSHIFT_TESSERACT_PATH_ELEMENT
buildTesseract
