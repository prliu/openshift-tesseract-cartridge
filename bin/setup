#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

client_result "Setting up..."

cd $OPENSHIFT_DATA_DIR
if [ ! -e libtool-2.4.6.tar.gz ]; then
    exec wget -c "http://ftpmirror.gnu.org/libtool/libtool-2.4.6.tar.gz" -O libtool-2.4.6.tar.gz
fi

exec tar zxvf libtool-2.4.6.tar.gz
cd libtool-2.4.6
exec ./configure --prefix=$OPENSHIFT_HOMEDIR/tesseract3/usr
exec make
exec make install

cd $OPENSHIFT_DATA_DIR

